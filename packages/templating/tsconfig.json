{
    "compilerOptions": {
        "isolatedModules": true,
        "downlevelIteration": true,
        "strict": true,
        "noImplicitAny": true,
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ESNext"],
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "paths": {
            "src/*": ["./*"]
        }
    },
    "include": ["src/**/*.ts", "types/**/*.d.ts", "index.ts"],
    "exclude": ["node_modules"]
}
