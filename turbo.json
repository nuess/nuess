{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "dev": {
            "cache": true,
            "dependsOn": ["^dev"],
            "outputs": []
        },

        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },

        "test:unit": {
            "dependsOn": ["^test:unit"],
            "outputs": []
        },

        "lint:check": {
            "dependsOn": ["^lint:check"],
            "outputs": []
        }
    }
}